@model PostViewModel

<div class="posts">
    <div class="post">
        <image class="post-image" src="@Model.ImageUrl"></image>
        <div class="post-text">
            <h2 class="post-title">@Model.Title</h2>
            <p class="post-description">@Model.Description</p>
            <p class="post-source">
                <a href="@Model.SourceUrl">Ссылка на источник</a>
            </p>
        </div>
    </div>
</div>